<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imransk.notification.MainActivity">

   <Button
       android:id="@+id/normalNoti"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="25sp"
       android:onClick="notificationStart"
       android:text="Start Notification"/>
    <Button
        android:id="@+id/bigNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"

        android:onClick="BignotificationStart"
        android:text="Big Notification"/>

</LinearLayout>
